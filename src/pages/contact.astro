---
import BaseLayout from "../layouts/BaseLayout.astro";
import GitHub from "../icons/GitHub.astro";
import X from "../icons/X.astro";
import Linkedln from "../icons/Linkedln.astro";
import Email from "../icons/Email.astro";
---

<BaseLayout showHeader={false}>
  <h1
    class="text-3xl leading-tight font-serif font-medium my-3 sm:text-5xl sm:leading-tight"
  >
    Get in touch
  </h1>
  <p class="text-xl leading-tight font-serif font-normal sm:leading-tight">
    Thank you for reaching out! Whether you have a question, a suggestion, or
    just want to share your thoughts, I'm all ears. Feel free to get in touch
    through any of the methods below:
  </p>
  <div class="flex flex-col my-3">
    <div class="text-xl font-serif inline-flex gap-2 my-3">
      <GitHub class="w-6 h-6 fill-current" />
      <a
        class="hover:underline underline-offset-2"
        href="https://github.com/gunungpw">Github</a
      >
    </div>
    <div class="text-xl font-serif inline-flex gap-2 my-3">
      <X class="w-6 h-6 fill-current" />
      <a
        class="hover:underline underline-offset-2"
        href="https://x.com/gunungpw">Twitter</a
      >
    </div>
    <div class="text-xl font-serif inline-flex gap-2 my-3">
      <Email class="w-6 h-6 fill-current" />
      <a
        class="hover:underline underline-offset-2"
        href="mailto:gunungpambudiw@gmail.com">Email</a
      >
    </div>
    <div class="text-xl font-serif inline-flex gap-2 my-3">
      <Linkedln class="w-6 h-6 fill-current" />
      <a
        class="hover:underline underline-offset-2"
        href="https://www.linkedin.com/in/gunungpw/">Linkedln</a
      >
    </div>
  </div>
</BaseLayout>
